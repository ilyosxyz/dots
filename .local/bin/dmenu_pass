#!/bin/sh

help_opt() {
  NAME="${0##*/}"
  INFO="
$NAME: password reader using dmenu

usage: $NAME [prompt]

Shows dmenu with prompt for password and outputs it. Main use is for SUDO_ASKPASS.
"
  printf "%s" "$INFO"
}

pass() {
  ifinstalled dmenu || exit 1

  dmenu -p "$1" -nf black -nb black <&-
}

case "$1" in
  --help)   help_opt;;
  *)        pass;;
esac
