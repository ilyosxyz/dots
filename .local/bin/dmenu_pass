#!/bin/sh

help_opt() {
  NAME="${0##*/}"
  INFO="
$NAME: password reader using dmenu

usage: $NAME [PROMPT]

Shows dmenu with PROMPT for password and outputs it. Main use is for SUDO_ASKPASS.
"
  printf "%s" "$INFO"
}

pass() {
  ifinstalled $MENU || exit 1

  $MENU -p "$1" -nf black -nb black <&-
}

case "$1" in
  --help)   help_opt;;
  *)        pass "$@";;
esac
